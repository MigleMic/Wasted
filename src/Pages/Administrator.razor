@page "/admin"
@using Wasted.Data
@using System.Collections.Generic
@inject RegistrationService RegistrationService



<AuthorizeView>
    <Authorized>
        <h1>Registered users:</h1>
        <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
<tbody>
  @foreach(User user in RegistrationService.GetUserList())
  { 
    ++i;
    <tr>
      <th scope="row">@i</th>
      <td>@user.Name</td>
      <td>@user.Lastname</td>
      <td>@user.Email</td>
    </tr>
  }
  </tbody>
</table>
    </Authorized>
    <NotAuthorized>

    </NotAuthorized>
</AuthorizeView>
